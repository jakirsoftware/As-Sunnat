    <select id="colI" name="colI" required onchange="checkcolH()"><br><br>
      <option value="">Loading...</option>
    </select><br><br>
   

    <label for="colJ">Column J (text Input):</label><br>
    <input type="text" id="colJ" name="colJ"><br><br>

